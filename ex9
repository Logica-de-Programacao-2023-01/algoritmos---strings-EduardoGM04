package main

import (
	"fmt"
	"strings"
)

func main() {
	var input string
	fmt.Print("Informe uma string: ")
	fmt.Scanln(&input)
	var letraAntiga, letraNova string
	fmt.Print("Informe a letra a ser substituída: ")
	fmt.Scanln(&letraAntiga)
	fmt.Print("Informe a nova letra: ")
	fmt.Scanln(&letraNova)
	resultado := strings.ReplaceAll(input, letraAntiga, letraNova)

	fmt.Println("String após a substituição:", resultado)
}
